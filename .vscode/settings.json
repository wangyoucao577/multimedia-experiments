{
    "C_Cpp.intelliSenseEngine": "disabled", // Use clangd's instead 
    "clangd.arguments": [
        "--compile-commands-dir=build", // where to find `compile_commands.json`
        "--header-insertion=never", // avoid error header insertion 
    ],
    "editor.formatOnSave": true, // Use clangd's internal clang-format engine
    "json.maxItemsComputed": 50000,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
}